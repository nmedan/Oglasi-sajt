@model IEnumerable<Gradovi>

@{
    ViewData["Title"] = "Index";
}


<style>
    a {
        text-decoration: none;
    }

        a:hover {
            color: lightblue;
            text-decoration: none;
        }

    .content {
        margin: 0;
        padding: 0;
        margin-left: 190px;
        margin-right: 150px;
        position: relative;
    }

    .meni {
        width: 180px;
        background-color: whitesmoke;
        padding-left: 10px;
        display: inline-block;
        height: auto;
        vertical-align: top;
    }

    .oglasi {
        display: inline-block;
        padding-left: 15px;
    }

    .oglas {
        border-bottom: 1px solid lightgray;
    }
</style>

<div class="content">
    <div class="meni">
        <div class="meni-naslov">
            <span><b>KATEGORIJE OGLASA</b></span>
        </div>
        @foreach (var item in ViewBag.Kategorije as IEnumerable<Kategorije>)
        {
            <div class="kategorije">
                <div class="kategorija-link">
                    @Html.ActionLink(item.NazivKategorije, "Kategorija", "Oglasi", new {id = item.Id }, new { @class = "visited" })
                </div>

            </div>
        }
    </div>
    <div class="oglasi">
        <div style="font-size:14px; padding-bottom:10px;">
            <b>Oglasi po gradovima</b>
        </div>
        @foreach (var item in Model)
        {
            <div style="font-size:12px">
                @Html.ActionLink(item.ImeGrada, "Grad", "Oglasi", new {id = item.Id})
                <span>(@item.Oglasi.Count())</span>
            </div>
        }

    </div>
</div>

